<%- include("../partials/header") %>

<h2 class="pageHeaders">New Debate</h2>

<div class="row justify-content-sm-center">
    <div class="col-md-10">
        <form action="/debates" method="post">
            <div class="form-group">
                
               <label for="debateTitle">Topic</label>
                <input class="form-control" type="text" name="debate[topic]" id="debateTitle">

                <h4>For</h4>
                
                <label for="debateForAuthor">Author</label>
                <input class="form-control" type="text" name="debate[for][author]" id="debateForAuthor">

                <label for="debateForContent">Content</label>
                <textarea class="form-control" name="debate[for][content]" id="debateForContent" cols="30" rows="10" placeholder="Write your argument here"></textarea>
                
                <br>

                <h4>Against</h4>
               
                <label for="debateAgainstAuthor">Author</label>
                <input class="form-control" type="text" name="debate[against][author]" id="debateAgainstAuthor">

                <label for="debateAgainstContent">Content</label>
                <textarea class="form-control" name="debate[against][content]" id="debateAgainstContent" cols="30" rows="10" placeholder="Write your argument here"></textarea>
            </div>
            <button class="btn btn-outline-info" type="submit" name="createPost">publish</button>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>