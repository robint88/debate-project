<%- include("../partials/header") %>

<h2 class="pageHeaders">Edit - <em><%= debate.topic %></em></h2>

<div class="center-form">
    <form action="/category/<%= category_slug%>/<%= debate.slug %>?_method=PUT" class="pure-form pure-form-stacked" method="post">
        <fieldset>
            <label for="debateTitle">Topic</label>
            <input class="pure-input-rounded" type="text" name="debate[topic]" id="debateTitle" value="<%= debate.topic %>">
            <label for="debateSummary">Summary</label>
            <textarea class="pure-input-rounded" cols="30" rows="10"type="text" name="debate[summary]" id="debateSummary"><%= debate.summary %></textarea>
            <label for="debateImage">Image</label>
            <input class="pure-input-rounded" type="text" name="debate[image]" id="debateImage" value="<%= debate.image %>">
            <select class="" data-style="btn-info" id="debateCategory" name="debate[category]">
                    <optgroup label="debate category">
                            <% categories.forEach(function(category){ %>
    
                                <% if(category.slug == category_slug){ %>
                                    <option name="" selected="selected" value="<%= category._id %>"><%= category.name %></option>
                                <% } else { %>
                                    <option name="" value="<%= category._id %>"><%= category.name %></option>
                                <% } %>
                                    
                            <% }) %>
                    </optgroup>
                </select>
            <div class="publish-buttons">
                    <% if(debate.isPublished){ %>
                        <input type="radio" id="publishDebate" name="debate[isPublished]" value="true" checked> <label for="publishDebate">Publish</label>
                    <input type="radio" id="unpublishDebate" name  ="debate[isPublished]" value="false"> <label for="unpublishDebate">Unpublish</label>
                    <% } else { %>
                        <input type="radio" id="publishDebate" name="debate[isPublished]" value="true"> <label for="publishDebate">Publish</label>
                    <input type="radio" id="unpublishDebate" name  ="debate[isPublished]" value="false" checked> <label for="unpublishDebate">Unpublish</label>
                    <%} %>
            </div>
            <button class="pure-button submit-button" type="submit" name="createPost">update debate</button>
        </fieldset>
    </form>
</div>

<%- include("../partials/footer") %>