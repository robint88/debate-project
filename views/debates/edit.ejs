<%- include("../partials/header") %>

<h2 class="pageHeaders">Edit - <em><%= debate.topic %></em></h2>

<div class="center-form">
    <form action="/category/<%= category_slug%>/<%= debate.slug %>?_method=PUT" class="pure-form pure-form-stacked" method="post">
        <fieldset>
            <label for="debateTitle">Topic</label>
            <input class="pure-input-rounded" type="text" name="debate[topic]" id="debateTitle" value="<%= debate.topic %>">
            <label for="debateSummary">Summary</label>
            <input class="pure-input-rounded" type="text" name="debate[summary]" id="debateSummary" value="<%= debate.summary %>">
            <label for="debateImage">Image</label>
            <input class="pure-input-rounded" type="text" name="debate[image]" id="debateImage" value="<%= debate.image %>">
            
            <button class="pure-button submit-button" type="submit" name="createPost">update debate</button>
        </fieldset>
    </form>
</div>

<%- include("../partials/footer") %>