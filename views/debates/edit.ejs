<%- include("../partials/header") %>

<h2 class="pageHeaders">Edit - <em><%= debate.topic %></em> FOR</h2>

<div class="center-form">
    <form action="/debates/<%= debate._id%>?_method=PUT" class="pure-form pure-form-stacked" method="post">
        <fieldset>
            <label for="debateTitle">Topic</label>
            <input class="pure-input-rounded" type="text" name="debate[topic]" id="debateTitle" value="<%= debate.topic %>">
            <label for="debateSummary">Summary</label>
            <input class="pure-input-rounded" type="text" name="debate[summary]" id="debateSummary" value="<%= debate.summary %>">
            <label for="debateCategory">Category</label>
            <select class="" data-style="btn-info" id="debateCategory" name="debate[category]">
                <optgroup label="debate category">
                        <% categories.forEach(function(category){ %>
                                <option name="" value="<%= category._id %>"><%= category.name %></option>
                        <% }) %>
            </select>
            <button class="btn btn-outline-info" type="submit" name="createPost">update debate</button>
        </fieldset>
    </form>
</div>

<%- include("../partials/footer") %>