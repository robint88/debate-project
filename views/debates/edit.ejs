<%- include("../partials/header") %>

<h2>Edit - <em><%= debate.topic %></em> FOR</h2>

<div class="row justify-content-sm-center">
    <div class="col-md-10">
        <form action="/debates/<%= debate._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="debateAuthor">Author</label>
                <input class="form-control" type="text" name="debate[for][author]" id="debateAuthor" value="<%= debate.for.author %>">

                <label for="debateContent">Content</label>
                <textarea class="form-control" name="debate[for][content]" id="debateContent" cols="30" rows="10"><%= debate.for.content %></textarea>
                
                <br>
                
              </div>
            <button class="btn btn-outline-info" type="submit" name="updatePost">update</button>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>