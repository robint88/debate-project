<%- include("../partials/header") %>

<h2 class="pageHeaders">
    Current Debates
</h2>
<div class="pure-g">
    
    <% for(let i=0; i < debates.length; i++){ %>
        <% if(i > 0 && i % 6 == 0){ %>
            <a href="debates/<%= debates[i]._id %>" class="pure-u-1 debate-item pure-u-md-1">
                <h4><%= debates[i].topic %></h4>
            </a>
        <% } else { %>
            <a href="debates/<%= debates[i]._id %>" class="pure-u-1 debate-item pure-u-md-1-3">
                <h4><%= debates[i].topic %></h4>
            </a>
        <% }%>
    <% } %>
</div>
<%- include("../partials/footer") %>