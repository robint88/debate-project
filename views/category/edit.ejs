<%- include("../partials/header") %>

<h2 class="pageHeaders">Edit <%=category.name%></h2>

<div class="row justify-content-sm-center">
    <div class="col-md-10">
        <form action="/categories/<%=category._id %>?_method=PUT" method="post">
            <div class="form-group">
                
                <label for="categoryName">Category Name</label>
                <input type="text" name="category[name]" id="categoryName" class="form-control" value="<%= category.name %>">

            </div>
            <br>
            <button class="btn btn-outline-info" type="submit" name="update category">update category</button>
        </form>
        <br>
        <form class="col text-center delete-form" action="/categories/<%= category._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger"> delete </button>
        </form>
        <a href="/categories/<%=category._id%>/removedebate" class="btn btn-outline-warning">Remove debate</a>
    </div>
    
</div>



<%- include("../partials/footer") %>