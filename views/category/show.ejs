<%- include("../partials/header") %>

<h1 class="display-2">
    <%= category.name %>
</h1>
<% if(category.debates.length < 1 ) {%>
    <div class="centred-text">
        <h3>NO DEBATES YET</h3>
    </div>
<%} else {%>
    <div class="pure-g">
        <% category.debates.forEach(function(debate){ %>
            <% if(debate.isPublished){ %>
                <a href="/category/<%= category.slug %>/<%= debate.slug %>" class="pure-u-1 debate-item pure-u-md-1-3" style="background-image: url(<%= debate.image %>);">
                    <h4>
                        <%= debate.topic %>
                    </h4>
                    <p class="debate-item-date">
                        <%= moment(debate.createdAt).calendar() %>
                    </p>
                </a>
            <% } %>
        <% }) %>
    </div>
<%}%>
<hr>







