<%- include("../partials/header") %>

<% if(currentUser && currentUser.isAdmin){ %>
    <div class="moderator-functions">
            <p class="mod-title">Admin functions</p>
            <div class="moderator-buttons">
                <a class="pure-button edit-debate-button" href="/category/<%= category.slug %>/edit"> edit category </a>
                <a class="pure-button edit-debate-button" href="/category/<%= category.slug %>/new"> new debate </a>
            </div>
        </div>
<% } %>

<section class="show-header" style="background-image: URL(<%= category.image %>>);background-repeat: no-repeat;
        background-size: auto auto;
        background-position: center center; background-size: cover;">
    <div class="header-content">
        <h1 class="debate-header">
            <%= category.name %>
        </h1>
    </div>
</section>
<% if(category.debates.length < 1 ) {%>
    <div class="centred-text">
        <h3>NO DEBATES YET</h3>
    </div>
<%} else {%>
    <div class="pure-g">
        <% category.debates.forEach(function(debate){ %>
            <% if(debate.isPublished){ %>
                <a href="/category/<%= category.slug %>/<%= debate.slug %>" class="pure-u-1 debate-item pure-u-md-1-3" style="background-image: url(<%= debate.image %>);">
                    <h4>
                        <%= debate.topic %>
                    </h4>
                    <p class="debate-item-date">
                        <%= moment(debate.createdAt).calendar() %>
                    </p>
                </a>
            <% } %>
        <% }) %>
    </div>
<%}%>







<%- include("../partials/footer") %>