<%- include('partials/header') %>

  <section class="pure-g">
    <div class="pure-u-1">
      <h2>latest debates</h2>
    </div>
    <% if(debates.length > 0){ %>
      <% for(let i =0; i < 9; i++){ %>
          <a href="/debates/<%=debates[i]._id%>" class="pure-u-1 debate-item pure-u-md-1-3">
            <h4><%= debates[i].topic %></h4>
          </a>
          
        <% } %>
      <% } else { %>
        <h3>NO DEBATES</h3>
      <% } %>
  </section>
  <a href="/debates" id="index-more-debates">
      <h4>MORE DEBATES</h4>
  </a>

<%- include('partials/footer') %>