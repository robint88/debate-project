  <% for(let i=0; i< 5; i++){ %>
      <div  class="carousel-item" style="background-image: url(<%= debates[i].image %>)">
          <a href="/category/<%= debates[i].category.slug %>/<%=debates[i].slug%>" class="carousel-content">
              <h4>
                  <%= debates[i].topic %>
              </h4>
              <p class="debate-summary">
                <%= debates[i].summary %>
              </p>
          </a>
        </div>
  <%}%>
