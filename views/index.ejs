</div>
<section class="index-section">
  <h4 class="index-category-header">Recent</h4>
  <article id="index-debates">
    <% for(let i=0; i< 6; i++){ %>
      <% if(debates[i].isPublished){ %>
        <a href="/category/<%=debates[i].category.slug%>/<%=debates[i].slug%>" class="index-debate-item">
          <img src="<%= debates[i].image%>" class="index-debate-img" alt="">
          <div class="index-debate-content">
            <p class="index-page-cat">
              <%= debates[i].category.name %>
            </p>
            <h5 class="index-debate-header">
              <%= debates[i].topic %>
            </h5 class="index-debate-header">
            <p class="index-debate-summary">
              <%= debates[i].summary %>
            </p>
          </div>
        </a>
      <% } %>
    <% } %>
    <a href="/debates" id="index-all-debates">view all debates</a>
  </article>
</section>

<section class="index-section">
  <h4 class="index-category-header">Categories</h4>
  <div class="pure-g">
      <% categories.forEach(function(category){ %>
        <a  href="/category/<%= category.slug %>" class="pure-u-1-3 index-cat-item pure-u-md-1-5" style="background-image: url(<%= category.image %>)">
          <h4>
              <%= category.name %>
          </h4>
        </a>
      <% }) %>
  </div>
</section>

