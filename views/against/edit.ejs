<%- include("../partials/header") %>

<h2 class="pageHeaders">EDIT</p></h2>

<div class="row justify-content-sm-center">
    <div class="col-md-10">
        <form action="/debates/<%= debate_id %>/against/<%= againstArg._id %>?_method=PUT" method="POST">
            <div class="form-group">

                <h4>Editing FOR argument as <%= againstArg.author %></h4>

                <label for="debateAgainstAuthor">Content Author</label>
                <input type="text" id="debateAgainstAuthor" name="against[author]" class="form-control" value="<%= againstArg.author %>">
                <label for="debateForContent">Content</label>
                <textarea class="form-control" name="against[content]" id="debateForContent" cols="30" rows="10" > <%= againstArg.content %></textarea>
                
            </div>
            <button class="btn btn-outline-info" type="submit" name="createPost">update</button>
        </form> 
    </div>  
</div>

