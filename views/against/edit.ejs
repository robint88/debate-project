<%- include("../partials/header") %>

<h2 class="pageHeaders">EDIT</p></h2>

<div class="center-form">
        <h4>Editing FOR argument as <%= againstArg.author %></h4>
        <form action="/category/<%= category_slug %>/<%= debate_slug %>/against/<%= againstArg._id %>?_method=PUT" method="POST" class="pure-form pure-form-stacked">
            <fieldset>
                <label for="debateAgainstAuthor">Content Author</label>
                <input type="text" id="debateAgainstAuthor" name="against[author]" required value="<%= againstArg.author %>">

                <label for="authorInfo">Author Info</label>
                <textarea required name="against[authorDetails]" id="authorInfo" cols="30" rows="10" > <%= againstArg.authorDetails %></textarea>

                <label for="authorWeb">Author Web</label>
                <input type="text" name="against[authorLink]" id="authorWeb" placeholder="Add author web link" value="<%=againstArg.authorLink %>">

                <label for="debateAgasintContent">Content</label>
                <textarea required name="against[content]" id="debateAgasintContent" cols="30" rows="10" > <%= againstArg.content %></textarea>
                
    
                <button class="submit-button" type="submit" name="createPost">update</button>
            </fieldset>
        </form> 
</div>

<%- include("../partials/footer") %>