<%- include("../partials/header") %>

<h2 class="pageHeaders"><%= debate.topic %></h2>

<div class="center-form">
        <h4>Against</h4>
        <form action="/debates/<%= debate._id%>/against" method="POST" class="pure-form pure-form-stacked">
            <fieldset>
                <label for="debateAgainstAuthor">Content Author</label>
                <input type="text" id="debateAgainstAuthor" name="against[author]" placeholder="Add author name" required>

                <label for="debateagainstContent">Content</label>
                <textarea  name="against[content]" id="debateagainstContent" cols="30" rows="10" placeholder="Write your argument here" required></textarea>
                
                <button class="submit-button" type="submit" name="createPost">publish</button>
            </fieldset>
        </form> 
</div>

<%- include("../partials/footer") %>