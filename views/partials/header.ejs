<body>
        <nav>
            <a href="/" class="logo">
                <span class="logo-pipe">|</span>ornara<span class="logo-pipe">|</span>
            </a>
            <ul class="nav-links">
                <li>
                    <a href="/category">categories</a>
                </li>
                <li>
                    <a href="/debates">debates</a>
                </li>
                <li>
                    <a href="#">submit</a>
                </li>
            <% if(!currentUser) { %>
                <li>
                    <a class="user-buttons" href="/login">login</a>
                </li>
                <li>
                    <a class="user-buttons" href="/register">register</a>
                </li>
            <% } else {%>
                <li>
                    <a class="user-buttons" href="#"><%= currentUser.username %></a>
                </li>
                <li>
                    <a class="user-buttons" href="/logout">logout</a>
                </li>
            <% } %>
            </ul>
            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
   
        <% if(error && error.length > 0){ %>
            <div class="flash-message-error">
                    <h4><%= error %></h4>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="flash-message-success">
                    <h4><%= success %></h4>
            </div>
        <% } %>
    